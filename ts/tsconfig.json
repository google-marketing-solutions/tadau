{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}